<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>

  <!--Add popover-->
  <object class="GtkPopover" id="popover-add">
    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <child>
          <object class="GtkEntry" id="bv_input">
            <property name="width_request">200</property>
            <style>
              <class name="flat"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="add_confirm">
            <property name="label">确定</property>
            <style>
              <class name="flat"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </object>

  <!--BiliBiliMusicWin-->
  <template class="BiliBiliMusicWin" parent="AdwApplicationWindow">
    <property name="visible">True</property>
    <property name="show-menubar">False</property>
    <property name="width_request">1500</property>
    <property name="height_request">800</property>

    <property name="content">
      <object class="GtkWindowHandle">
        <!--GtkWindowHandle child begin-->
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="margin-top">4</property>
                <property name="margin-bottom">4</property>
                <child>
                  <object class="GtkMenuButton" id="add_bv_btn">
                    <property name="width_request">42</property>
                    <property name="visible">True</property>
                    <property name="tooltip-text" translatable="yes">添加 BV 号</property>
                    <property name="icon-name">value-increase-symbolic</property>
                    <property name="popover">popover-add</property>
                    <style>
                      <class name="flat"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child type="flap">
              <object class="PlayListView" id="playlist_view">
                <property name="vexpand">true</property>
              </object>
            </child>
            <child>
              <object class="BiliBiliPlaybackControl" id="playback_ctl">
                <property name="halign">start</property>
                <property name="margin-top">6</property>
                <property name="margin-bottom">12</property>
              </object>
            </child>
          </object>
        </child>
        <!--GtkWindowHandle child end-->
      </object>
    </property>

  </template>
</interface>
